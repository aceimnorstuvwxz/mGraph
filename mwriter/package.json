{
  "name": "mwriter",
  "version": "0.1.0",
  "productName": "MWriter",
  "description": "Markdown Writer for hackers",
  "main": "main.js",
  "build": {
    "appId": "com.netqon.mwriter",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "extraFiles": "*.dll"
    }
  },
  "repository": "https://github.com/fateleak/mwriter",
  "keywords": [
    "Netqon",
    "BoringUniverse",
    "markdown"
  ],
  "author": "netqon.com",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^1.3.0",
    "html-to-text": "^4.0.0",
    "htmlencode": "0.0.4",
    "moment": "^2.21.0",
    "monaco-editor": "^0.11.1",
    "request": "^2.83.0",
    "superagent": "^3.8.2",
    "turndown": "^4.0.1",
    "uuid": "^3.1.0",
    "word-count": "^0.2.2"
  },
  "devDependencies": {
    "electron": "^3.0.0",
    "electron-builder": "^20.28.4"
  }
}
